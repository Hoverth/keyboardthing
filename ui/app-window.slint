import { Button, VerticalBox, ScrollView } from "std-widgets.slint";

export component AppWindow inherits Window {
    always-on-top: true;

    in-out property <int> counter: 42;
    in property <string> output: "";
    callback request-increase-value();
    callback request-reload();
    callback add-text(string);

    VerticalBox {
        Text {
            text: "Counter: \{root.counter}";
        }

        Button {
            text: "Increase value";
            clicked => {
                root.request-increase-value();
            }
        }

        Button {
            text: "Read Wayland Queue";
            clicked => {
                root.request-reload();
            }
        }

        Button {
            text: "add \"ee\"";
            clicked => {
                root.add-text("ee");
            }
        }

        TextInput {
            text: "testing input";
        }

        ScrollView {
            width: 400px;
            height: 500px;
            viewport-height: 3000px;


            Text {
                y: 0px;
                width: 400px;
                text: output;
            }
        }
    }
}
